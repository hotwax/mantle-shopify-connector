    <service verb="get" noun="CompleteOrderRefundDetails" authenticate="anonymous-all">
        <description>
            Fetch complete order and refund data in one call.
            Executes Mega Query and automatically handles pagination overflow.
        </description>
        <in-parameters>
            <parameter name="systemMessageRemoteId" required="true"/>
            <parameter name="shopifyOrderId" required="true"/>
        </in-parameters>
        <out-parameters>
            <parameter name="order" type="Map"/>
        </out-parameters>
        <actions>
            <script>queryText = ec.resourceFacade.template("component://shopify-connector/template/graphQL/OrderRefundMegaQuery.ftl", "")</script>
            <service-call name="co.hotwax.shopify.common.ShopifyHelperServices.send#ShopifyGraphqlRequest"
                          in-map='[systemMessageRemoteId:systemMessageRemoteId, queryText:queryText, variables:[shopifyOrderId: "gid://shopify/Order/${shopifyOrderId}"]]'
                          out-map="responseMap"/>

            <if condition="!responseMap.response?.order">
                <return type="warning" message="No Shopify order found for id: ${shopifyOrderId}"/>
            </if>

            <set field="order" from="responseMap.response.order"/>

            <script><![CDATA[
                def resolveConnection = { parent, parentIdKey, connectionName, serviceName, resultKey, serviceIdParam ->
                    def connection = parent.get(connectionName)
                    if (connection?.pageInfo?.hasNextPage) {
                        def result = ec.service.sync().name(serviceName)
                                .parameters([systemMessageRemoteId: systemMessageRemoteId, (serviceIdParam): parent.get(parentIdKey), cursor: connection.pageInfo.endCursor ])
                                .call()
                        connection.edges.addAll(result[resultKey].collect { [node: it] })
                    }
                    parent[connectionName] = connection?.edges?.findAll { it?.node != null }?.collect { it.node } ?: []
                }

                order.refunds?.each { refund ->
                    resolveConnection(refund, 'id', 'refundLineItems', 'co.hotwax.shopify.return.ShopifyReturnServices.get#RefundLineItems', 'refundLineItems', 'shopifyRefundId')
                    resolveConnection(refund, 'id', 'refundShippingLines', 'co.hotwax.shopify.return.ShopifyReturnServices.get#RefundShippingLines', 'refundShippingLines', 'shopifyRefundId')
                    resolveConnection(refund, 'id', 'transactions', 'co.hotwax.shopify.return.ShopifyReturnServices.get#RefundTransactions', 'refundTransactions', 'shopifyRefundId')
                    resolveConnection(refund, 'id', 'orderAdjustments', 'co.hotwax.shopify.return.ShopifyReturnServices.get#OrderAdjustments', 'orderAdjustments', 'shopifyRefundId')

                    if (refund.return) {
                        refund.return.refundId = refund.id
                        resolveConnection(refund.return, 'refundId', 'returnLineItems', 'co.hotwax.shopify.return.ShopifyReturnServices.get#ReturnLineItemsByRefundV2', 'returnLineItems', 'shopifyRefundId')
                        resolveConnection(refund.return, null, 'exchangeLineItems', null, null, null)
                    }
                }
                if(order.refundAgreements) {
                    order.resolvedGid = co.hotwax.shopify.util.ShopifyHelper.resolveShopifyGid(order.id)
                    resolveConnection(order, 'resolvedGid', 'refundAgreements', 'co.hotwax.shopify.return.ShopifyReturnServices.get#RefundAgreements', 'refundAgreements', 'shopifyOrderId')
                }
                ]]></script>
        </actions>
    </service>
