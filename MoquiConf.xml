<moqui-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/moqui-conf-3.xsd">
    <default-property name="shopify_api_version" value="2024-10"/>

    <default-property name="shopify_webhook_end_point" value="/rest/s1/shopify/webhook/payload"/>

    <webapp-list>
        <webapp name="webroot">
            <!-- Shopify Webhook Request Filter  -->
            <filter name="ShopifyRequestFilter" class="co.hotwax.shopify.filter.ShopifyRequestFilter" async-supported="true">
                <url-pattern>/rest/s1/shopify/webhook/*</url-pattern>
            </filter>
        </webapp>
    </webapp-list>
</moqui-conf>